#!/bin/bash

if [[ -n "$2" ]]; then
	echo "terminal [fil-eller-dir]"
	exit 1
elif [[ -n "$1" ]]; then
	ARG=$(realpath $1)
	if [[ -d "$ARG" ]]; then 
		DIR="$ARG"
	elif [[ -f "$1" ]]; then
		DIR="$(dirname $ARG)"
	else
		echo "Ugyldigt argument: $1"
		exit 1
	fi
else 
	DIR="$(realpath $(pwd))"
	echo $DIR
	if [[ -z "$DIR" ]]; then 
		DIR="$HOME"
	fi
fi

nohup urxvt -cd $DIR >/dev/null 2>/dev/null &

